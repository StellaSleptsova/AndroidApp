<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryTr"
    android:theme="@android:style/Theme.Translucent"
    android:id="@+id/layout_button_task_main"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="370dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorWhite"
        android:id="@+id/layout_button_task"
        >

        <EditText
            android:id="@+id/editText_add_name_task"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:hint="Название задачи..."
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/editText_add_text_task"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_add_name_task"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:inputType="textMultiLine"
            android:lines="8"
            android:hint="Текст задачи..."
            android:gravity="top"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_warning_task"
            android:text="@string/fill_all"
            android:textColor="@color/colorWarning"
            android:layout_below="@id/editText_add_text_task"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            />

        <Button
            android:id="@+id/button_addTask"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_warning_task"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:text="Добавить задачу"
            android:textColor="@color/colorWhite"/>
    </RelativeLayout>

</RelativeLayout>