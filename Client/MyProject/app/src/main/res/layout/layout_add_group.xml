<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryTr"
    android:theme="@android:style/Theme.Translucent"
    android:id="@+id/layout_button_group_main"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:background="@color/colorWhite"
        android:id="@+id/layout_button_group"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_add_group"
            android:textColor="#000"
            android:textSize="18sp"
            android:id="@+id/textview_add_group"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/editText_add_name_group"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/textview_add_group"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:hint="Введите название группы..."/>

        <Button
            android:id="@+id/button_addGroup"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimary"
            android:text="@string/button_text_add_group"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/editText_add_name_group"
            android:layout_alignLeft="@+id/editText_add_name_group"
            android:layout_alignStart="@+id/editText_add_name_group"
            android:layout_marginTop="15dp"/>
    </RelativeLayout>

</RelativeLayout>